# Playwright Test Environment Configuration
# Copy this to .env and modify as needed

# Application URLs
BASE_URL=http://localhost:5001
API_BASE_URL=http://localhost:4999

# Browser Configuration
HEADLESS=true
BROWSER=chromium
TIMEOUT=30000
SLOW_TIMEOUT=60000

# Screenshot Configuration
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_DIR=screenshots

# Test Configuration
DEFAULT_WAIT=5000
NAVIGATION_WAIT=3000

# Authentication (if enabled in the application)
TEST_USERNAME=admin
TEST_PASSWORD=

# Sample Data Path
SAMPLE_CSV_PATH=/app/test-data/sample.csv